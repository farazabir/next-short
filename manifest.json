{
    "manifest_version": 3,
    "name": "Next Short",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "externally_connectable": {
        "matches": ["*://www.youtube.com/*"]
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["popup.js"]
        }
    ],
    "icons": {
        "16": "icons/logo.png",
        "48": "icons/logo.png",
        "128": "icons/logo.png"
    }
}
